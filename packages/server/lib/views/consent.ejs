<!doctype html>
<html>
  <head>
    <title>Consent</title>
    <style>
      html,
      body,
      main {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
      }
      * {       
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI (Custom)', Roboto, 'Helvetica Neue', 'Open Sans (Custom)', system-ui, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji';
      }
      main {
        display: flex;
        flex-direction: column;
        background-color: <%= "#" + branding.page_background %>;
      }
    </style>
     <script>
      function navigate(url) {
        window.parent.postMessage({ event: 'navigate', destination: url }, "*");
      }
    </script>
  </head>
  <body>
    <main>
      <div>
        <% if (can_choose_integration) { %>
          <% if (is_preview) { %>
              <a href="#" onclick="navigate('<%= server_url %>/link-preview/<%= link_token %>')">Back</a>
            <% } else { %>  
              <a href="<%= server_url %>/link/<%= link_token %>">Back</a>
            <% } %>
        <% } %>  
        <p>
          <%= branding.name || "This application" %> uses Platform to connect to <%= integration.display_name %>
        </p>
        <% if (is_preview) { %>
          <button>Submit</button>
        <% } else { %>  
          <form action="/link/<%= link_token %>/i/<%= integration.provider %>" method="post">
            <input type="submit" value="Submit" />
          </form>
        <% } %>
      </div>
      <% if (branding.logo) { %>
        <div>
          <img src="<%= branding.logo %>" width="100px" height="100px" />
        </div>
       <% } %>  
    </main>
  </body>
</html>
