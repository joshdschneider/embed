<!doctype html>
<html>
  <head>
    <title>List</title>
    <style>
      html,
      body,
      main {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
      }
      * {       
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI (Custom)', Roboto, 'Helvetica Neue', 'Open Sans (Custom)', system-ui, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji';
      }
      main {
        display: flex;
        flex-direction: column;
        background-color: <%= "#" + branding.page_background %>;
      }
    </style>
    <script>
      function navigate(url) {
        window.parent.postMessage({ event: 'navigate', destination: url }, "*");
      }

      function filterIntegrations() {
        var input = document.getElementById('search');
        var filter = input.value.toUpperCase();
        var ul = document.getElementById("integrationList");
        var li = ul.getElementsByClassName('integration-item');
        var noResults = document.getElementById("noResults");
        let visibleCount = 0; 

        for (var i = 0; i < li.length; i++) {
          var a = li[i].getElementsByTagName("a")[0];
          var txtValue = a.textContent || a.innerText;
          if (txtValue.toUpperCase().indexOf(filter) > -1) {
            li[i].style.display = "";
            visibleCount++;
          } else {
            li[i].style.display = "none";
          }
        }

        if (visibleCount === 0) {
          noResults.style.display = "block";
        } else {
          noResults.style.display = "none";
        }
      }
    </script>
  </head>
  <body>
    <main>
      <input type="text" id="search" placeholder="Search" oninput="filterIntegrations()" />
      <ul id="integrationList">
        <% integrations.forEach((integration) => { %>
          <li class="integration-item" data-name="<%= integration.display_name %>">
            <% if (is_preview) { %>
              <a href="#" onclick="navigate('<%= server_url %>/link-preview/<%= link_token %>/i/<%= integration.provider %>')"><%= integration.display_name %></a>
            <% } else { %>  
              <a href="<%= server_url %>/link/<%= link_token %>/i/<%= integration.provider %>"><%= integration.display_name %></a>
            <% } %>
          </li>
        <% }) %>
      </ul>
      <div id="noResults" style="display: none;">None found</div>
    </main>
  </body>
</html>
